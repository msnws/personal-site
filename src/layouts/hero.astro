---
import Button from "../components/primarybutton.astro";
import { Image } from "astro:assets";
import masonImage from "../assets/mason-photo-2.png";
---

<div class="container">
    <div class="hero-text">
        <div class="smallHead">
            <h3>Hello, my name is</h3>
        </div>
        <div class="leadText">
            <h1>Mason Weis</h1>
        </div>
        <div class="subCopy">
            <p>Designer and Developer in Chicago, IL.</p>
        </div>
        <div class="cta">
            <a href="#contact"><Button>Let's Talk</Button></a>
        </div>
    </div>
    <div class="image-wrapper">
        <Image src={masonImage} alt="Photo of Mason Weis" class="mImage" />
    </div>
</div>

<style>
    .hero-text {
        width: 50%;
    }

    .container {
        height: 85vh;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        background: var(--hero-gradient);
        background-color: var(--bg);
        border-bottom: 1px solid var(--divider);
        overflow: hidden;
        isolation: isolate;
        color: var(--text);
    }

    .hero-text {
        width: 50%;
    }

    .smallHead {
        margin-bottom: -2rem;
    }
    .subCopy {
        margin-top: -1rem;
    }

    h3 {
        text-transform: uppercase;
        font-weight: 600;
        font-size: 0.85rem;
        letter-spacing: 0.12rem;
    }

    .leadText h1 {
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    p {
        font-size: 1.1rem;
    }

    .cta {
        margin-top: 1.2rem;
    }
    .cta a {
        color: #fff;
        text-decoration: none;
    }

    .image-wrapper img {
        filter: var(--filter);
        mix-blend-mode: var(--mixBlend);
        opacity: var(--opacity);
    }

    @media (max-width: 744px) {
        .leadText h1 {
            font-size: 3rem;
        }
        p {
            font-size: 1rem;
        }
        .cta {
            width: 60%;
        }

        .container {
            position: relative;
            height: 85vh;
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
        }

        .hero-text {
            width: 90%;
            z-index: 1;
        }

        .image-wrapper {
            position: absolute;
            width: 10%;
        }

        .image-wrapper img {
            object-fit: contain;
            width: 40rem;
            margin-top: 22rem;
        }

        @media (max-width: 430px) {
            .image-wrapper {
                right: 100%;
            }
        }

        @media (min-width: 431px) and (max-width: 550px) {
            .image-wrapper {
                right: 90%;
            }
        }

        @media (min-width: 551px) and (max-width: 675px) {
            .image-wrapper {
                right: 80%;
            }
        }

        @media (min-width: 676px) and (max-width: 744px) {
            .image-wrapper {
                right: 70%;
            }
        }
    }

    @media (min-width: 745px) and (max-width: 1133px) {
        .leadText h1 {
            font-size: 3.5rem;
        }
        h3 {
            font-size: 1rem;
        }
        p {
            font-size: 1.2rem;
        }
        .cta {
            width: 100%;
        }

        .container {
            position: relative;
        }

        .hero-text {
            width: 70%;
            z-index: 1;
        }

        .cta {
            width: 50%;
        }

        @media (min-width: 745px) and (max-width: 850px) {
            .image-wrapper {
                position: absolute;
                width: 10%;
                right: 65%;
            }

            .image-wrapper img {
                object-fit: contain;
                max-width: 40rem;
                margin-top: 22rem;
            }
        }

        @media (min-width: 851px) and (max-width: 990px) {
            .image-wrapper {
                position: absolute;
                width: 10%;
                right: 60%;
            }

            .image-wrapper img {
                object-fit: contain;
                max-width: 40rem;
                margin-top: 20rem;
            }
        }

        @media (min-width: 991px) and (max-width: 1133px) {
            .image-wrapper {
                position: absolute;
                width: 10%;
                right: 50%;
            }

            .image-wrapper img {
                object-fit: contain;
                max-width: 40rem;
                margin-top: 20rem;
            }
        }

        @media (min-width: 745px) and (max-width: 1133px) and (min-height: 1100px) {
            .image-wrapper img {
                object-fit: cover;
                height: 100%;
                width: auto;
                width: 1000%;
            }

            .image-wrapper {
                top: 0;
                right: 70%;
            }

            @media (min-width: 745px) and (max-width: 1133px) and (min-height: 1450px) {
                .image-wrapper img {
                    object-fit: cover;
                    height: 100%;
                    width: auto;
                    width: 1200%;
                }

                .image-wrapper {
                    top: 0;
                    right: 80%;
                }
            }
        }
    }

    @media (min-width: 1134px) and (max-width: 1299px) {
        .leadText h1 {
            font-size: 4rem;
        }
        h3 {
            font-size: 1.2rem;
        }
        p {
            font-size: 1.2rem;
        }
        .cta {
            width: 40%;
        }

        .container {
            position: relative;
        }

        .hero-text {
            width: 50%;
            z-index: 1;
        }

        .image-wrapper {
            position: absolute;
            width: 50%;
            left: 40%;
        }

        .image-wrapper img {
            object-fit: contain;
            width: 120%;
            margin-top: 30rem;
            display: block;
        }
    }

    @media (min-width: 1300px) {
        .image-wrapper {
            position: absolute;
            width: 50%;
            left: 50%;
        }

        .image-wrapper img {
            object-fit: contain;
            max-width: 50rem;
            margin-top: 35rem;
            display: block;
        }

        .leadText h1 {
            font-size: 4rem;
        }
        h3 {
            font-size: 1.2rem;
        }
        p {
            font-size: 1.2rem;
        }
        .cta {
            width: 40%;
        }

        .container {
            position: relative;
        }

        .hero-text {
            width: 50%;
            z-index: 1;
        }

        @media (max-width: 1400px) and (min-height: 1100px) {
            .image-wrapper img {
                object-fit: cover;
                height: 100%;
                width: auto;
                width: 130%;
            }

            .image-wrapper {
                position: absolute;
                top: 1%;
                right: 10%;
            }

            @media (min-width: 1400px) and (min-height: 1400px) {
                .image-wrapper img {
                    object-fit: cover;
                    height: 100%;
                    width: auto;
                    width: 150%;
                }

                .image-wrapper {
                    position: absolute;
                    top: 1%;
                    right: 15%;
                }
            }
        }

        @media (max-width: 1600px) and (min-height: 1350px) {
            .image-wrapper img {
                object-fit: cover;
                height: 100%;
                width: 150%;
            }

            .image-wrapper {
                position: absolute;
                top: 1%;
                right: 15%;
            }
        }

        @media (max-width: 1800px) and (min-height: 1500px) {
            .image-wrapper img {
                object-fit: cover;
                height: 100%;
                width: 150%;
            }

            .image-wrapper {
                position: absolute;
                top: 1%;
                right: 20%;
            }
        }
    }
</style>

<script>
    window.addEventListener("scroll", () => {
        const image = document.querySelector(".image-wrapper img");
        const scrollY = window.scrollY;
        image.style.transform = `translateY(${scrollY * 0.5}px)`; // Adjust speed here
    });
</script>
