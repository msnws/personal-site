---
import { Icon } from "astro-icon/components";
---

<div class="navbar">
    <h1>Mason Weis</h1>
    <nav class="navLinks">
        <ul>
            <li><a href="#">Buttons</a></li>
            <li><a href="#">Cards</a></li>
            <li><a href="#">Navigation</a></li>
            <li><a href="#">Forms</a></li>
            <li><a href="#">Interactions</a></li>
        </ul>
    </nav>
    <div class="hamburgerDiv" aria-label="menu">
        <!-- TODO Make the hamburger look better -->
        <button class="hamburger">
            <Icon name="mdi:hamburger-menu" />
        </button>
    </div>
</div>

<style>
    .navbar {
        position: sticky;
        background-color: transparent;
        top: 0;
        z-index: 10;
        height: 3rem;
        transition: all 0.3s ease;
    }

    .hamburger {
        color: var(--text);
        border: 1.5px solid var(--text);
        width: 2.5rem;
        height: 2.5rem;
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
        background-color: transparent;
        border-radius: 10%;
    }

    h1 {
        color: var(--text);
        font-size: 1.5rem;
    }

    @media (max-width: 744px) {
        .navbar {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1rem 2rem;
        }

        .hamburgerDiv,
        .hamburger {
            display: block;
        }

        .navLinks {
            display: none;
        }
    }
</style>

<script>
    const navBar = document.querySelector(".navbar");
    window.onscroll = () => {
        if (window.scrollY > 0) {
            navBar.style.backgroundColor = "var(--bg)";
            navBar.style.boxShadow = "0 2px 5px rgba(0, 0, 0, 0.1)";
        } else {
            navBar.style.backgroundColor = "transparent";
            navBar.style.boxShadow = "none";
        }
    };
</script>
