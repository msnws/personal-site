        transform: scale(1.01);
        transition: transform 0.08s cubic-bezier(0.3, 1.5, 0.7, 1);
    }

    .relax {
        transform: scale(1);
        transition: transform 0.5s cubic-bezier(0.4, 0.8, 0.6, 1);
    }

    @media (max-width: 768px) {
        .buttonClass {
            font-size: var(--font-small);
        }
    }

